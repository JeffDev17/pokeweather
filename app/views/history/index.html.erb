<h1>Search History</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>City</th>
      <th>Temperature</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @search_histories.each do |history| %>
      <tr>
        <td><%= history.id %></td>
        <td><%= history.city %></td>
        <td><%= history.temperature %></td>
        <td><%= history.created_at.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
