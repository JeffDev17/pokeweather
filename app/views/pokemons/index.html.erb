<h1>Pokedex</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Dex Number</th>
      <th>Name</th>
      <th>Height</th>
      <th>Weight</th>
    </tr>
  </thead>
  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.dex %></td>
        <td><%= pokemon.name %></td>
        <td><%= pokemon.height %></td>
        <td><%= pokemon.weight %></td>
      </tr>
    <% end %>
  </tbody>
</table>